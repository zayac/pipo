/* Tree nodes are defined in this file.  
   1. node identifier
   2. string representation
   3. number of arguments
*/

DEF_TREE_CODE (MODULE, "module_node", 2)

DEF_TREE_CODE (FUNCTION, "function_node", 2)

/* Used when freeing atomic objects.  */
DEF_TREE_CODE (EMPTY_MARK, "empty_mark", 0)

/* Used to return an error.  */
DEF_TREE_CODE (ERROR_MARK, "error_mark", 0)

/* Represents any variable declared.  */
DEF_TREE_CODE (IDENTIFIER, "identifier_node", 0)

/* Represents any variable declared.  */
DEF_TREE_CODE (VALUE, "value_node", 0)

/* List of trees, used to represent list of statements
   or list of arguments in the function call.  */
DEF_TREE_CODE (LIST, "tree_list", 0)
